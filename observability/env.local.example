# Local Development Observability Configuration
# Copy to .env or source directly: source observability/env.local.example

# Enable duroxide observability
export DUROXIDE_OBSERVABILITY_ENABLED=true

# OTLP endpoint (local docker)
export OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Log configuration
export DUROXIDE_LOG_FORMAT=json
export DUROXIDE_LOG_LEVEL=info

# Service identification
export OTEL_SERVICE_NAME=toygres
export OTEL_SERVICE_VERSION=0.1.0

# General logging
export RUST_LOG=info,toygres_server=debug,toygres_orchestrations=debug


